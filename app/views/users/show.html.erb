<% provide(:title, @user.name) %>
<div class='row'>
  <aside class='span4'>
    <section>
      <h2>
        <%= gravatar_for( @user ) %>
        <%= @user.name %>
      </h2>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class='span8'>

    <%= render 'follow_form' if signed_in? %>

    <% if @user.microposts.any? %>
      <h3> Keep-N-Touch Notes (<%= @user.microposts.count %>) </h3>
      <ol class='microposts'>
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>

  </div>
</div>
